<%= form_tag 'user_curriculum/develop', method: 'get', class: 'w-full max-w-md my-6' do %>
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= label :major, "Major", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
    </div>
    <div class="md:w-1/2">
      <%= select_tag :major, options_for_select([nil, "Computer Science", "Mathematics", "Electrical Engineering"]), class: "select bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>
  </div>


  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= label :concentration, "Concentration", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
    </div>
    <div class="md:w-1/3">
      <%= select_tag :concentration, options_for_select([nil, 'Theory', 'Applied']), class: "select bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= label :time_frame, "Time Frame (months)", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
    </div>
    <div class="md:w-1/3">
      <%= select_tag :time_frame, options_for_select([nil, 6, 12]), class: "select bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>
  </div>

  <div class="hidden ">
    <div class="md:w-1/3">
      <%= label :hrs_week, "Hrs / Week", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
    </div>
    <div class="md:w-1/3">
      <%= select_tag :hrs_week, options_for_select([20, 40]), class: "select bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= label :reason_for_pursuing, "Why are choosing to pursue this discipline?", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
    </div>
    <div class="md:w-1/2">
      <%= text_area_tag :reason_for_pursuing, nil, class: "h-[100px] bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
    </div>
  </div>

  <div class="md:flex md:items-center">
    <div class="md:w-1/2"></div>
    <div class="md:w-1/3">
      <%= submit_tag "Submit", class: "shadow bg-purple-600 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
    </div>
        <div class="md:w-1/3"></div>
  </div>
  
<% end %>

<% if @curriculum %>
  <div class="mt-5">
    <div class="px-4 join pl-[100px]">
      <div class=" flex flex-row items-center justify-items-center join-item ">
        <div class="text-l font-semibold leading-7 text-gray-900 mr-10">Suggested Curriculum </div>
      </div>
      <div class="join-item">
        <button class="btn btn-success">Save</button>
      </div>
    </div>
    <div class="mt-6 border-t border-gray-100">
      <dl class="divide-y divide-gray-100">
        <% @curriculum.each do |c| %>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= c['course_title'] %></dd>
            <dt class="text-sm font-medium leading-6 text-gray-900 <%= c['label'] == 'beginner' ? 'text-green-500' : c['label'] == 'intermediate' ? 'text-yellow-500' : 'text-red-500' %>"><%= c['label'] %></dt>
          </div>
        <% end %>
      </dl>
    </div>
  </div>
<% end %>

